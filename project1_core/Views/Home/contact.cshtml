@model countactus

<div class="container" style="margin-top:25px;margin-bottom:25px;">
    <div class="col-lg-6">
        <form  asp-action="savcontact" method="post" role="form" >
            <div class="row">
                <div class="col form-group mt-3">
                    <input type="text" asp-for="name" class="form-control"  placeholder="Your Name" required="">
                </div>
                <div class="col form-group mt-3">
                    <input type="email" class="form-control" asp-for="email" placeholder="Your Email" required="">
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="subj"  placeholder="Subject" required="">
            </div>
            <div class="form-group mt-3">
                <textarea class="form-control" asp-for="massage" rows="5" placeholder="Message" required=""></textarea>
            <div class="validate"></div>
            </div>
            
            <div class="text-center"><button class="btn btn-success" type="submit">Send Message</button></div>
        </form>
    </div>

</div>